			<edit>
				<find><![CDATA[// Setup look and feel]]></find>
				<action type="before-add"><![CDATA[//-- mod : Tweet topic
//-- add
if ($auth->acl_get_list(ANONYMOUS, 'f_read', $forum_id) && !empty($config['tweet_hash']))
{
	$s_tweet = true;
	$topic_url = generate_board_url() . '/viewtopic.' . $phpEx . '?f=' . $forum_id . '&amp;t=' . $topic_id;
	//$hashtag = htmlspecialchars(urlencode('#'. $config['tweet_hash']));
	$hashtag = '%23'. $config['tweet_hash'];
}
else
{
	$s_tweet = false;
}
//-- fin : Tweet post]]></action>
			</edit>
			<edit>
				<find><![CDATA[$topic_data['topic_title'] = censor_text($topic_data['topic_title']);]]></find>
				<action type="after-add"><![CDATA[//-- mod : Tweet topic
//-- add
// Make sure the tweet is no more than 140 chars (changed to 121 due to twitters short url thingy).
if ($s_tweet)
{
	$strlen = strlen(htmlspecialchars(urlencode($topic_data['topic_title'])) . ': ' . $hashtag);
	if ($strlen > 121)
	{
		$chars = 121 - $strlen;
		$tweet_text = htmlspecialchars(urlencode(truncate_string($topic_data['topic_title'], $chars, 255, true, '...'))) . ': ' . $hashtag;
	}
	else
	{
		$tweet_text = htmlspecialchars(urlencode($topic_data['topic_title'])) . ': ' . $hashtag;
	}
}
//-- fin : Tweet topic]]></action>
			</edit>
			<edit>
				<find><![CDATA[$template->assign_vars(array(]]></find>
				<action type="after-add"><![CDATA[//-- mod : Tweet topic
//-- add
	'S_TWEET' 		=> $s_tweet,
	'TWEET_TEXT' 	=> $tweet_text,
	'TWEET_URL'		=> $topic_url,
//-- fin : Tweet topic]]></action>
			</edit>
			<edit>
				<find><![CDATA[$post_unread = (isset($topic_tracking_info[$topic_id]) && $row['post_time'] > $topic_tracking_info[$topic_id]) ? true : false;]]></find>
				<action type="after-add"><![CDATA[//-- mod : Tweet post
//-- add
	if ($s_tweet)
	{
		$post_url = generate_board_url() . '/viewtopic.' . $phpEx . '?p=' . $row['post_id'] . '%23p' . $row['post_id'];
		//$post_url = $topic_url . '%23p' . $row['post_id'];
		// first let's remove any bbcode, it doesn't do any good anyway and makes the tweet shorter
		$twit_regex = array('#<[^>]*>(.*<[^>]*>)?#Usi', // HTML code magic_urls and smilies
			'#\[/?[^\[\]]+\]#mi', // Strip all bbcode tags
		);
		$tweet_text = preg_replace($twit_regex, ' ', $row['post_text']);
		$strlen = strlen($tweet_text . ': ' . $hashtag);
		// Make sure the tweet is no more than 140 chars (changed to 121 due to twitters short url thingy).
		if ($strlen > 121)
		{
			$chars = 121 - $strlen;
			$tweet_text = truncate_string($tweet_text, $chars, 255, true, '...') . ': ' . $hashtag;
		}
		else
		{
			$tweet_text = $tweet_text . ': ' . $hashtag;
		}
	}
//-- fin : Tweet post]]></action>
			</edit>
